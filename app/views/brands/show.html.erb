<section class="py-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 mb-4">
        <div class="card overflow-hidden mb-4">
          <div class="card-body">
            <div class="text-center">
              <div class="avatar avatar-xxl">
                <%= link_to  brand_path(@brand) do %>
                  <%= image_tag 'avatar/avatar.png', class: 'avatar-img rounded-circle border border-3' %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="card-footer py-2">
            <div class="row">
              <div class="col-12">
                <% if rodauth.logged_in? %>
                  <% if current_account.id == @brand.account_id %>
                    <%= link_to dashboard_brands_path, class: 'btn btn-primary-soft w-100' do %>
                      Управлять
                    <% end %>
                  <% else %>
                    <%= link_to brand_path(@brand), class: 'btn btn-primary-soft w-100' do %>
                      Вступить
                    <% end %>
                  <% end %>
                <% else %>
                <%= link_to brand_path(@brand), class: 'btn btn-primary-soft w-100' do %>
                      Вступить
                    <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6 vstack gap-4">
        <div class="card">
          <div class="card-header border-0 pb-0">
            <h4 class="card-title h5">
              <%= @brand.name %>
            </h4>
            <ul class="list-inline mb-0 mt-3">
              <li class="list-inline-item me-4">
                <i class="bi bi-calendar2-plus me-1"></i>
                На сервисе с <%=  @brand.created_at.strftime('%d-%m-%Y') %>
              </li>
            </ul>
          </div>
          <div class="card-body">
            <h4 class="card-title h5">Информация</h4>
            <div class="rounded border px-3 py-2 mt-3">
              <div class="d-flex align-items-center justify-content-between">
                <h6>О товариществе</h6>
              </div>
              <p class="mb-0">
                <% if @brand.bio.present? %>
                  <%=  @brand.bio %>
                <% else %>
                  Отсутствует
                <% end %>
              </p>
            </div>
            <ul class="list-inline mb-0 mt-3">
              <li class="list-inline-item me-4">
                <i class="bi bi-geo-alt me-1"></i>
                Россия, Москва
              </li>
            </ul>
            <ul class="avatar-group list-unstyled mb-0 mt-3">
              <li class="avatar avatar-xs">
                <img class="avatar-img rounded-circle" src="https://i.pravatar.cc/301" alt="avatar">
              </li>
              <li class="avatar avatar-xs">
                <img class="avatar-img rounded-circle" src="https://i.pravatar.cc/302" alt="avatar">
              </li>
              <li class="avatar avatar-xs">
                <img class="avatar-img rounded-circle" src="https://i.pravatar.cc/303" alt="avatar">
              </li>
              <li class="avatar avatar-xs">
                <img class="avatar-img rounded-circle" src="https://i.pravatar.cc/304" alt="avatar">
              </li>
              <li class="avatar avatar-xs">
                <img class="avatar-img rounded-circle" src="https://i.pravatar.cc/305" alt="avatar">
              </li>
              <li class="avatar avatar-xs">
                <img class="avatar-img rounded-circle" src="https://i.pravatar.cc/306" alt="avatar">
              </li>
              <li class="avatar avatar-xs">
                <img class="avatar-img rounded-circle" src="https://i.pravatar.cc/307" alt="avatar">
              </li>
              <li class="avatar avatar-xs">
                <div class="avatar-img rounded-circle bg-primary">
                  <span class="smaller text-white position-absolute top-50 start-50 translate-middle">+22</span>
                </div>
              </li>
            </ul>
          </div>
          <div class="card-footer mt-3 pt-3 pb-3">
            <div class="hstack  justify-content-between ">
              <div class="text-center w-100 text-truncate">
                <h6 class="mb-0">0</h6>
                <small>публикаций</small>
              </div>
              <div class="vr"></div>
              <div class="text-center w-100 text-truncate">
                <h6 class="mb-0">0</h6>
                <small>участников</small>
              </div>
              <div class="vr"></div>
              <div class="text-center w-100 text-truncate">
                <h6 class="mb-0">0</h6>
                <small>подписчиков</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
