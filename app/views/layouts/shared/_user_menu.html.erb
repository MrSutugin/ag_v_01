<% if rodauth.logged_in? %>
  <%= current_account.email %>
  <%= link_to "Change password", rodauth.change_password_path %>
  <%= link_to "Change email", rodauth.change_login_path %>
  <%= link_to "Close account", rodauth.close_account_path%>
  <%= link_to "Sign out", rodauth.logout_path, data: { turbo_method: :post } %>
<% else %>
  <%= link_to "Войти", rodauth.login_path %>
  <%= link_to "Sign up", rodauth.create_account_path%>
<% end %>
